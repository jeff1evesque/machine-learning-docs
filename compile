#!/bin/bash

DOC_VERSION="$1"
CWD="$2"
PWD=$(pwd)

cd "$CWD"
sudo apt-get -y install python-pip
sudo pip install sphinx
sudo apt-get -y install subversion
mkdir -p "$DOC_VERSION"
mv "$DOC_VERSION" html
sudo svn export https://github.com/jeff1evesque/machine-learning/trunk/doc source
make html
mv html "$DOC_VERSION"
rm -rf source
cd "$PWD"